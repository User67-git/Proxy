class Dog:
    def __init__(self, name=None, breed=None, age=None, color=None):
        self.name = name
        self.breed = breed
        self.age = age
        self.color = color

    def customize(self):
        self.name = input("What's your dog's name? ")
        self.breed = input("What breed is your dog? ")
        self.age = input("How old is your dog? ")
        self.color = input("What color is your dog? ")

    def describe(self):
        print("\nüê∂ Your Dog:")
        print(f"Name: {self.name}")
        print(f"Breed: {self.breed}")
        print(f"Age: {self.age}")
        print(f"Color: {self.color}")

# --- Program starts here ---
my_dog = Dog()
my_dog.customize()
my_dog.describe()
